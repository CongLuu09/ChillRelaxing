<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/planLifetime"
    android:background="@drawable/bg_item_gradient"
    android:padding="16dp"
    android:layout_marginTop="12dp"
    android:gravity="center_vertical"
    android:elevation="2dp">


    <TextView
        android:id="@+id/tvPlanName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lifetime"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_weight="1"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tvPlanPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="353.000 Ä‘"
        android:textColor="@android:color/white"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tvPlanDiscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-99%"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_discount_badge"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:layout_marginStart="8dp"
        android:textSize="12sp"
        android:textStyle="bold" />
</LinearLayout>
